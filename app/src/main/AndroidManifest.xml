        <activity
            android:name=".activities.TelaPrincipal"
            android:screenOrientation="fullSensor"
            android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>

        <activity
            android:name=".activities.TelaCadastrar"
            android:label="@string/title_activity_tela_cadastrar"
            android:parentActivityName=".activities.TelaPrincipal"
            android:screenOrientation="fullSensor">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.TelaPrincipal" />
        </activity>

        <activity
            android:name=".activities.TelaPesquisar"
            android:label="@string/title_activity_tela_pesquisar"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".activities.TelaPrincipal">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.TelaPrincipal" />
        </activity>

        <activity
            android:name=".activities.TelaImpostacoes"
            android:label="@string/menu_settings"
            android:parentActivityName=".activities.TelaPrincipal"
            android:screenOrientation="fullSensor">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.TelaPrincipal" />
        </activity>

    </application>

</manifest>
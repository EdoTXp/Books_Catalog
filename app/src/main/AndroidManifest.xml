<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.BiblioLivro.criarlivros">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".activities.App"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:label="@string/app_name"
        android:icon="@mipmap/iconapp"
        android:roundIcon="@mipmap/iconapp_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.SplashScreen"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.TelaPrincipal"
            android:label="@string/app_name"
            android:screenOrientation="fullSensor" />

        <activity
            android:name=".activities.TelaCadastrar"
            android:label="@string/title_activity_tela_cadastrar"
            android:parentActivityName=".activities.TelaPrincipal"
            android:screenOrientation="fullSensor">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.TelaPrincipal" />
        </activity>

        <activity
            android:name=".activities.TelaPesquisar"
            android:label="@string/title_activity_tela_pesquisar"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".activities.TelaPrincipal">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.TelaPrincipal" />
        </activity>

        <activity
            android:name=".activities.TelaImpostacoes"
            android:label="@string/menu_settings"
            android:parentActivityName=".activities.TelaPrincipal"
            android:screenOrientation="fullSensor">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.TelaPrincipal" />
        </activity>

    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".BookCatalogApp"
        android:allowBackup="true"
        android:icon="@mipmap/iconapp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/iconapp_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.deiovannagroup.books_catalog.ui.views.activities.InsertBookActivity"
            android:exported="false"
            android:label="@string/title_activity_tela_cadastrar"
            android:parentActivityName="com.deiovannagroup.books_catalog.ui.views.activities.MainActivity" />

        <activity
            android:name="com.deiovannagroup.books_catalog.ui.views.activities.SearchActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:label="@string/title_activity_tela_pesquisar"
            android:parentActivityName="com.deiovannagroup.books_catalog.ui.views.activities.MainActivity" />

        <activity
            android:name="com.deiovannagroup.books_catalog.ui.views.activities.SettingsActivity"
            android:exported="false"
            android:label="@string/menu_settings"
            android:parentActivityName="com.deiovannagroup.books_catalog.ui.views.activities.MainActivity" />

        <activity
            android:name="com.deiovannagroup.books_catalog.ui.views.activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AppSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
<resources>

    <!-- Base application theme. -->
    <!-- Day / Night mode -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecundary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">@color/background</item>
        <item name="secundarybackgroundcolor">@color/windowPopUpBackground</item>
        <item name="linebordercolor">@color/lineBorder</item>
        <item name="textcolor">@color/colorPrimaryText</item>
        <item name="textColorHint">@color/colorTextHint</item>
        <item name="tintcolor">@color/colorPrimaryText</item>
        <item name="borderbackground">@color/background</item>
        <item name="borderBackgroundError">@color/errorBorder</item>
        <item name="buttonbackground">@color/background</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="menubarbackground">@color/colorPrimaryText</item>
        <item name="android:windowAnimationStyle">@style/WindowsAnimationTransition</item>
        <item name="android:itemBackground">@color/colorMenubarBackground</item>
        <item name="android:itemTextAppearance">@style/MenuItemTextAppearanceDark</item>
    </style>

    <!--Animação utilizada quanto se troca o tema-->
    <style name="WindowsAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <!--Cor de cada MenuItem no tema escuro-->
    <style name="MenuItemTextAppearanceDark" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

</resources>

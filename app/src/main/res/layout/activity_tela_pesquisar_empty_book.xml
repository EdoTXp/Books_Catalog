<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor"
    android:fadeScrollbars="false"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activities.TelaPesquisar">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/description_empty_bookcase"
        android:src="@drawable/empty_bookcase" />

    <TextView
        android:id="@+id/txt_emptyBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="?attr/textcolor"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnNewBook"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/layout_border"
        android:drawableEnd="@android:drawable/ic_menu_add"
        android:elegantTextHeight="false"
        android:text="@string/btn_newBook"
        android:textColor="?attr/textcolor"
        android:textSize="20sp" />

</LinearLayout>